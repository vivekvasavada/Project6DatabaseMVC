                        @Html.DisplayFor(modelItem => item.BottomsType)
                    </h4>
                    <h4>
                        @Html.DisplayFor(modelItem => item.BottomsColor)
                    </h4>
                    <h4>
                        @Html.DisplayFor(modelItem => item.BottomsSeason)
                    </h4>
                    <h4>
                        @Html.DisplayFor(modelItem => item.BottomsOccasion)
                    </h4>
                    <p>
                        @Html.ActionLink("Edit", "Edit", new { id = item.BottomsID1 }) |
                        @Html.ActionLink("Details", "Details", new { id = item.BottomsID1 }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.BottomsID1 })
                    </p>
                    </div>
</div>
            </div>
