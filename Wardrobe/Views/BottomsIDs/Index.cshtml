@model IEnumerable<Wardrobe.Models.BottomsID>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


@foreach (var item in Model)
{
    
        <div class="container">

            <div class="col-md-4 col-xs-12 colBorder">
                <div class="row">
                    <h1>
                        @Html.DisplayFor(modelItem => item.BottomsName)
                    </h1>
                    <h4>
                        <img class="img-responsive" src="@Html.DisplayFor(modelItem => item.BottomsPhoto)" alt="Pants" />
                        
                    </h4>
